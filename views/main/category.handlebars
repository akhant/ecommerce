<div class="container">
    <div class="row">

        {{#forEach products}}
        <div class="col-md-4">
            <a href="/product/{{_id}}">
                <div class="thumbnail">
                    <img src="{{image}}" style="width:300px;" alt="">
                    <div class="caption">
                        <h3>{{name}}</h3>
                        <p>{{category.name}}</p>
                        <p>${{price}}</p>
                    </div>
                </div>
            </a>
        </div>
        {{/forEach}}
    </div>
</div>
