<div class="jumbotron" id="navbar-gap">
    <div class="container-fluid">
        <h1 class="display-3 text-center">Product main page</h1>
        <p class="text-center">Use the search to find the best product</p>
        
                <div class="input-group col-md-12 text-center">
                    <input type="text" class="form-control input-lg" name="search_term" ></input>
                    <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search" ></i>></button>
                </div>
           
    </div>
</div>

<div class="container">
    <div class="row" id="searchResults">

        {{#forEach products}}
        <div class="col-md-4">
            <a href="/product/{{_id}}">
                <div class="thumbnail">
                    <img src="{{image}}" style="width:300px;" alt="">
                    <div class="caption">
                        <h3>{{name}}</h3>
                        <p>{{category.name}}</p>
                        <p>${{price}}</p>
                    </div>
                </div>
            </a>
        </div>
        {{/forEach}}
        

    </div>
    <nav aria-label="Page navigation" class="pagination_nav">
            <ul class="pagination text-center">
                <li>
                    {{#eachIndex pages}}

                    <li class="page-item">

                        <a class="page-link" href="/page/{{item}}">{{item}}</a>
                    </li>


                    {{/eachIndex}}
                </li>
            </ul>
        </nav>
</div>